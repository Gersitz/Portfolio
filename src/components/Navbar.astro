---
import { Icon } from "astro-icon/components";
---

<nav>
    <div class="logo">
        <Icon name="line-md:laptop-twotone" />
    </div>
    <ul class="nav-links">
        <li><a href="">About Me</a></li>
        <li><a href="">Projects</a></li>
        <li><a href="">Contact</a></li>
    </ul>
    <div class="theme-switch">
        <Icon name="line-md:moon-loop" />
        <Icon name="line-md:sunny-outline-loop" />
    </div>
</nav>

<style>
    [data-icon="line-md:laptop-twotone"] {
        width: 150px;
        height: auto;
    }
    .theme-switch {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
    [data-icon="line-md:moon-loop"] {
        width: 40px;
        height: auto;
    }
    [data-icon="line-md:sunny-outline-loop"] {
        width: 40px;
        height: auto;
    }
    nav {
        display: flex;
        flex-direction: row;
        color: #cfcfcf;
        justify-content: space-between;
        max-height: 20vh;
    }
    nav ul {
        list-style-type: none;
        padding-left: 0;
        display: flex;
        flex-direction: row;
        align-self: center;
        gap: 2rem;
    }
    nav ul li a {
        color: #cfcfcf;
        text-decoration: none;
        font-size: 1.7em;
        transition: all 0.3s ease-out;
    }
    nav ul li a:hover {
        text-shadow: 0px 0px 10px #b4b109;
        color: #dcd50e;
    }
</style>